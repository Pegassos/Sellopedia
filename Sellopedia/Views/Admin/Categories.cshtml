            crossorigin="anonymous" referrerpolicy="no-referrer"></script>*@

    @* ---------------------- icon picker ---------------------- *@
    <script src="~/Content/IconPicker/fontawesome-iconpicker.js"></script>


    <script src="~/Scripts/Custom/Categories.js">
    </script>
}