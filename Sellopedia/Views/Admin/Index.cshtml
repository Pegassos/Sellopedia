    <div class="col-6">
        <div class="white-box">
            <h3 class="box-title">Users</h3>
            <div class="d-flex justify-content-center">
                <canvas id="users" style="width:100%;max-width:700px"></canvas>
            </div>
        </div>
    </div>
    <div class="col-6">
