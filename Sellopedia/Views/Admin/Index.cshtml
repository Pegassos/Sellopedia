@section scripts
{
    @* ChartJs ccdn *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
    </script>

    @* custom js *@
    <script src="~/Scripts/Custom/Statistics.js">
    </script>
}