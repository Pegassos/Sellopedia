@model Sellopedia.Models.Review



@using (Html.BeginForm("CreateReview", "Shop", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(m => m.ProductId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <style>
            .rating {
                unicode-bidi: bidi-override;
                direction: rtl;
                text-align: center;
            }

                .rating > span {
                    display: inline-block;
                    position: relative;
                    font-size: 35px;
                    /*color: #D19C97;*/
                }

                    .rating > span:hover,
                    .rating > span:hover ~ span {
                        color: #D19C97;
                        cursor: pointer;
                    }

                        .rating > span:hover:before,
                        .rating > span:hover ~ span:before {
                            content: "\2605";
                            position: absolute;
                            left: 0;
                            color: #D19C97;
                        }

                    .rating > span.hovered {
                        color: #D19C97;
                    }

                        .rating > span.hovered:hover {
                            color: transparent;
                            cursor: pointer;
                        }

                        .rating > span.hovered:before,
                        .rating > span.hovered ~ span {
                            color: #D19C97;
                        }
        </style>



        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-4">Leave a review</h4>
                    <small>Your email address will not be published. Required fields are marked *</small>
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="rating">
                                <span class="star" id="5">☆</span><span class="star" id="4">☆</span><span class="star" id="3">☆</span><span class="star" id="2">☆</span><span class="star" id="1">☆</span>
                            </div>
                        </div>
                    </div>
                    <form>
                        <div class="form-group">
                            <label for="message">Your Review *</label>
                            <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Score)
                            @Html.EditorFor(model => model.Score, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Score, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Message)
                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <input type="submit" value="Create" class="btn btn-default" disabled />
                                }
                                else
                                {
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}




