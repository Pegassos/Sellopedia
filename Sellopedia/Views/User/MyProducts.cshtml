@model IEnumerable<Sellopedia.Models.Product>

@{
    ViewBag.Title = "MyProducts";
}

<h2>MyProducts</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct")
</p>


<div class="d-flex flex-row flex-wrap justify-content-around">
    @foreach (var product in Model)
    {
        <div class="p-3" style="width: 33%">
            <h4>@product.Name</h4>
            <p style="white-space: nowrap; overflow: hidden; display: block; text-overflow: ellipsis;">@product.Description</p>
            <img src="@product.ProductImages.ElementAt(0).Image" width="100%" height="400" style="object-fit:contain" />
            <div class="d-flex justify-content-between">
                @if (product.OriginalPrice > product.DiscountPrice)
                {
                    <h5><span style="text-decoration: line-through;">@product.OriginalPrice dh</span> @product.DiscountPrice</h5>
                }
                else
                {
                    <h5>@product.OriginalPrice dh</h5>
                }

                <p>@product.Quantity left</p>
            </div>
            <button class="w-100 btn-primary">@Html.ActionLink("Edit","EditProduct", "User", new { id = product.Id }, null)</button>

        </div>
    }
</div>


