@model Sellopedia.Models.Upload

@{
    ViewBag.Title = "ImageUpload";
}

<h2>ImageUpload</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Upload</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2>@ViewBag.msg</h2>

        <div>
            @Html.TextBoxFor(m => m.Product.Name)
        </div>

        <div>
            @Html.DropDownListFor(m => m.Product.CategoryId, ViewBag.Categories as SelectList)
        </div>

        <div>
            @Html.TextBoxFor(m => m.Images, new { @type = "file" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
